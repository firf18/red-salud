{
	"$schema": "https://schema.tauri.app/config/2.0.0",
	"productName": "Red Salud Corporativo",
	"version": "1.0.0",
	"identifier": "com.redsalud.corporativo",
	"build": {
		"beforeDevCommand": "pnpm dev",
		"beforeBuildCommand": "pnpm build",
		"devUrl": "http://localhost:5173",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"label": "main",
				"title": "Red Salud - Panel Corporativo",
				"width": 1600,
				"height": 900,
				"minWidth": 1200,
				"minHeight": 700,
				"resizable": true,
				"fullscreen": false,
				"transparent": false,
				"hiddenTitle": false,
				"titleBarStyle": "Visible",
				"visible": true
			}
		],
		"security": {
			"csp": "default-src 'self'; connect-src 'self' https://*.supabase.co https://*.agora.io wss://*.supabase.co ws://localhost:*; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; media-src 'self' https://*.agora.io;"
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}