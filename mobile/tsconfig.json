{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@mobile/*": [
        "src/*"
      ],
      "@core/*": [
        "../packages/core/src/*"
      ]
    }
  },
  "include": [
    "app",
    "src",
    "nativewind.d.ts"
  ],
  "exclude": [
    "../node_modules",
    "../.expo",
    "dist",
    "app/(tabs)/paciente/citas/**",
    "app/(tabs)/paciente/medicamentos/**"
  ],
  "extends": "expo/tsconfig.base"
}
